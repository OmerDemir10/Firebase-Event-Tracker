{
  "manifest_version": 3,
  "name": "Firebase DebugView Event Tracker",
  "version": "1.3",
  "author": "Developed by Omer Demir",
  "description": "Firebase DebugView sayfasÄ±ndaki eventleri takip eden ve listeleyen bir eklenti",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "https://console.firebase.google.com/*",
    "https://analytics.google.com/*"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://console.firebase.google.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ],
      "all_frames": false,
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://analytics.google.com/*"
      ],
      "js": [
        "js/iframe-scanner.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  }
}